@page "/asasd"

<PageTitle>Signup</PageTitle>
<div class="w-screen h-screen bg-[#18181c] pt-10 flex justify-center items-centert text-white">
  <div class="w-4/5 bg-white shadow-lg rounded-lg flex lg:h-[90%] h-[80%]">
    <img
      src="https://images.unsplash.com/photo-1533750516457-a7f992034fec?q=80&w=3906&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
      alt="" class="w-1/2 bg-cover object-cover" />

    <div class="w-1/2 text-black flex flex-col justify-center pl-9 pr-5">
      <h3 class="text-gray-500 pb-5">Welcome to Nizventory</h3>

      <h2 class="font-bold">Create your account</h2>
      <h3 class="text-xs py-4">
        Already have an account?
        <a href="login" class="text-purple-600 underline hover:font-bold">Login</a>
      </h3>

      <form @onsubmit="SubmitForm">
        <div class="flex flex-col">
          <label for="email" class="text-sm py-2">Your Email</label>
          <input type="email" id="email" @bind="email" placeholder="Enter Email here"
            class="border-black text-sm border-2 w-[90%] pl-2 py-2 outline-none" required />
        </div>
        <div class="flex flex-col mt-2">
          <label for="password" class="text-sm py-2">
            Choose a Password
          </label>
          <input type="password" id="password" @bind="password" placeholder="Enter your Password Here"
            class="border-black text-sm border-2 w-[90%] pl-2 py-2 outline-none" required />
        </div>

        <div class="flex flex-col mt-2">
          <label for="confirm-password" class="text-sm py-2">
            Confirm Password
          </label>
          <input type="password" id="confirm-password" @bind="confirmPassword" placeholder="Enter Password Again"
            class="border-black text-sm border-2 w-[90%] pl-2 py-2 outline-none" required />
          @if (showPasswordMismatchError)
          {
            <p class="text-red-500 text-sm mt-1">Passwords do not match</p>
          }
        </div>

        <div class="mt-3">
          <button type="submit"
            class="bg-[#33E67A] mt-3 rounded-sm px-3 py-2 hover:scale-105 text-sm transition-transform duration-300 ease-in-out">
            Sign Up
          </button>
          <button
            class="bg-[#33E67A] mt-3 lg:ml-4 rounded-sm px-3 py-2 hover:scale-105 text-sm transition-transform duration-300 ease-in-out">
            <i class="fa-brands fa-google mr-3"></i>
            Sign up with Google
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

@code {
    private string email;
    private string password;
    private string confirmPassword;
    private bool showPasswordMismatchError;

    private void SubmitForm()
    {
        showPasswordMismatchError = password != confirmPassword;
        if (!showPasswordMismatchError)
        {
            // Proceed with form submission
            // For example, you can redirect to another page or perform further actions
            // For now, just displaying a message
            Console.WriteLine("Form submitted successfully!");
        }
    }
}
